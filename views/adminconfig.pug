extends layout

block content
  .main.container.row
    .col-md-6.col-md-offset-3
      h1.display-4.m-b-2 User Configuration
      
      // register form
      form(method='POST' action='/adminconfig')
        div.form-group
          label(for='staffId') Staff ID:
          input#staffId.form-control(type='text', placeholder='staff ID' name='staffId')
        div.form-group
          label(for='securityRole') Security Role:
          input#staffId.form-control(type='text', placeholder='Security Role' name='securityRole')
        div.form-group
          label(for='pw') Password:
          input#pw.form-control(type='password' name='password')
        div.form-group
          label(for='pw2') Confirm Password:
          input#pw2.form-control(type='password' name='confirmPassword')
        button.btn.btn-primary(type='submit') Complete
